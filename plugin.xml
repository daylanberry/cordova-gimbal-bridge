<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="urbanairship-gimbal-bridge-cordova"
    version="2.0.1">

    <name>Urban Airship Gimbal Plugin</name>
    <description>Urban Airship Gimbal plugin for Cordova</description>
    <license>Apache 2.0</license>
    <keywords>gimbal,cordova,urbanairship</keywords>
    <repo>https://github.com/urbanairship/cordova-gimbal-bridge</repo>

    <engines>
        <engine name="cordova" version=">=5.4.0" />
        <engine name="cordova-plugman" version=">=4.2.0" />
    </engines>
    
    <dependency id="urbanairship-cordova" />
    <dependency id="urbanairship-gimbal-sdk-cordova" url="https://github.com/urbanairship/cordova-gimbal-sdk"/>
    
    <js-module src="www/UAGimbal.js" name="UrbanAirship">
		<clobbers target="UAGimbal" />
	</js-module>
    
    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/widget">
            <feature name="GimbalPlugin">
                <param name="ios-package" value="GimbalPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <!-- Plugin -->
        <header-file src="src/ios/GimbalPlugin.h" />
        <source-file src="src/ios/GimbalPlugin.m" />

        <!-- Gimbal Adapter -->
        <header-file src="src/ios/GimbalAdapter.h" />
        <source-file src="src/ios/GimbalAdapter.m" />
    </platform>
    
    <!-- android -->
    <platform name="android">
		<config-file target="res/xml/config.xml" parent="/widget">
            <feature name="GimbalPlugin">
                <param name="android-package" value="com.urbanairship.cordova.gimbal.GimbalPlugin"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        
        <!-- Permissions -->
		<config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
		</config-file>
        
        <!-- GimbalAdapter service / receiver -->
		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			<service
				android:name="com.urbanairship.cordova.gimbal.GimbalAdapterService"
				android:exported="false" >
			</service>
			<receiver
				android:name="com.urbanairship.cordova.gimbal.GimbalAdapterReceiver"
				android:enabled="true" >
				<intent-filter>
					<action android:name="com.urbanairship.cordova.gimbal.StartService" />
				</intent-filter>
				<intent-filter>
					<action android:name="android.intent.action.BOOT_COMPLETED" />
				</intent-filter>
			</receiver>
		</config-file>
		
		<source-file src="src/android/GimbalPlugin.java" target-dir="src/com/urbanairship/cordova/gimbal" />
		<source-file src="src/android/GimbalAdapterService.java" target-dir="src/com/urbanairship/cordova/gimbal" />
		<source-file src="src/android/GimbalAdapterReceiver.java" target-dir="src/com/urbanairship/cordova/gimbal" />
    </platform>
</plugin>
